# Пример файла с переменными окружения
# Скопируйте в .env и заполните реальными значениями

# База данных PostgreSQL
DATABASE_URL=postgresql://frame_user:frame_user@localhost:5432/frame_db

# Секретный ключ для JWT токенов (сгенерируйте случайную строку)
# Можно сгенерировать командой: openssl rand -hex 32
SECRET_KEY=supersecretkey

# Настройки приложения
APP_ENV=development
DEBUG=True

# Настройки CORS (для продакшена укажите ваш домен)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Опциональные настройки
ACCESS_TOKEN_EXPIRE_MINUTES=30
UPLOAD_MAX_SIZE_MB=10